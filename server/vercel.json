{
  "builds": [
    {
      "src": "../frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../frontend/build"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" }, 
    { "src": "/(.*)", "dest": "../frontend/build/$1" } 
  ]
}

